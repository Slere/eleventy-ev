{% macro breadcrumbs(params) %}
    {% if params and params.length %}
        <ol class="flex items-center whitespace-nowrap">
            {% for crumb in params %}
                {% if loop.last %}
                    <li
                        class="inline-flex items-center text-sm font-semibold text-foreground/75 truncate whitespace-normal"
                        aria-current="page">
                        {{ crumb.label or title }}
                    </li>
                {% else %}
                    <li class="inline-flex items-center whitespace-normal">
                        <a class="flex items-center text-sm text-foreground/50 hover:text-primary focus:outline-hidden focus:text-primary" href="{{ crumb.url | url or '#' }}">
                            {{ crumb.label }}
                        </a>
                        <svg
                            class="shrink-0 size-5 text-foreground/50 mx-2"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                            aria-hidden="true">
                            <path d="M6 13L10 3" stroke="currentColor" stroke-linecap="round"></path>
                        </svg>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    {% endif %}
{% endmacro %}