{% macro breadcrumbs(params) %}
    {% if params and params.length %}
        <ol class="flex items-center whitespace-nowrap font-headline text-sm">
            {% for crumb in params %}
                {% if loop.last %}
                    <li
                        class="inline-flex items-center font-medium text-foreground truncate whitespace-normal capitalize"
                        aria-current="page">
                        {{ crumb.label or title }}
                    </li>
                {% else %}
                    <li class="inline-flex items-center whitespace-normal">
                        <a class="flex items-center capitalize  text-foreground-muted hover:text-primary focus:outline-hidden focus:text-primary" href="{{ crumb.url | url or '#' }}">
                            {{ crumb.label | safe }}
                        </a>
                        <svg
                            class="shrink-0 size-4 text-foreground-muted sm:mx-1"
                            width="16"
                            height="16"
                            viewBox="0 0 16 16"
                            fill="none"
                            xmlns="http://www.w3.org/2000/svg"
                            aria-hidden="true">
                            <path d="M6 13L10 3" stroke="currentColor" stroke-linecap="round"></path>
                        </svg>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    {% endif %}
{% endmacro %}