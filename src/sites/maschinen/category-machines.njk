---
pagination:
    data: category_machines
    size: 1
    alias: machines
layout: layout/app.njk
eleventyComputed:
    title: "{{ machines.title }}"
    permalink: "maschinen/{{ machines.slug }}/"
---

{% set crumbs = page.url | breadcrumbs %}
{% set idx = (crumbs | length) - 2 %}
{% if idx >= 0 %}
    {% set backUrl = crumbs[idx].url %}
{% else %}
    {% set backUrl = '/' %}
{% endif %}
{% set backUrl = backUrl | replaceAll(' ', '-') %}
<section class="pt-32 pb-16 section-gradient-light">
    <div class="max-w-8xl mx-auto px-6">
        <nav aria-label="breadcrumb" class="mb-8">
            {%- from "components/breadcrumbs.njk" import breadcrumbs -%}
            {% set crumbs = page.url | breadcrumbs %}
            {{ breadcrumbs(crumbs) }}
        </nav>
        <div class="max-w-3xl ">
            <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary text-sm font-medium rounded-full mb-6">
                {% if machines.parent_category %}
                    {{ machines.parent_category | safe }}
                {% else %}
                    {{ machines.machines | length }} {% if machines.machines | length == 1 %}&nbsp;Maschine{% else %}&nbsp;Maschinen{% endif %}
                {% endif %}
            </span>
            <h1 class="font-headline font-bold text-4xl sm:text-5xl md:text-6xl text-foreground-headline mb-6 tracking-tight break-words
                    hyphens-auto md:hyphens-none ">
                {{ machines.title | safe }}
            </h1>
            <p class="text-foreground-muted text-lg md:text-xl max-w-2xl hyphens-auto break-words font-light leading-normal">
                Bündelpacker in der Folienverpackung sind Verpackungsmaschinen, die mehrere Einzelprodukte zu stabilen Verkaufseinheiten
                zusammenfassen und mit Folie umhüllen. Dabei werden die Produkte meist in Reihen oder Lagen gruppiert und anschließend
                mit Schrumpf- oder Stretchfolie verpackt.</p>
        </div>
    </div>
</section>
<section class="py-20">
    <div class="max-w-8xl mx-auto px-6">
        <div class="space-y-16">
            {% for product in machines.machines %}
                {% if product.url != page.url %}
                    <div class="group scroll-my-24" id="{{ product.id }}">
                        <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-start">
                            <div class="relative aspect-[4/3] rounded-lg overflow-hidden">
                                <img src="{{ product.image | url }}" alt="{{ product.name }}" class="absolute inset-0 w-full h-full object-cover"></div>
                                <div class="flex flex-col">
                                    <h2 class="font-headline text-2xl md:text-3xl text-foreground-headline font-bold mb-4 tracking-[-0.01rem]">{{ product.name | safe }}</h2>
                                    <p class="text-foreground-muted mb-6 leading-relaxed">{{ product.description | safe }}</p>
                                    <div class="mb-6">
                                        <h3 class="text-sm font-semibold text-foreground-headline font-headline uppercase mb-3">Hauptmerkmale</h3>
                                        <ul class="space-y-2">
                                            {% for feat in product.features_list %}
                                                <li class="flex items-start gap-2 text-sm text-foreground-muted">
                                                    <span class="w-4 h-4 text-primary mt-0.5 flex-shrink-0">
                                                        <svg
                                                            xmlns="http://www.w3.org/2000/svg"
                                                            width="24"
                                                            height="24"
                                                            viewBox="0 0 24 24"
                                                            fill="none"
                                                            stroke="currentColor"
                                                            stroke-width="2"
                                                            stroke-linecap="round"
                                                            stroke-linejoin="round"
                                                            class="lucide lucide-circle-check-big-icon lucide-circle-check-big size-4"><path d="M21.801 10A10 10 0 1 1 17 3.335"/><path d="m9 11 3 3L22 4"/>
                                                        </svg>
                                                    </span>
                                                    {{ feat }}
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </div>
                                    <div class="mb-8 p-4 bg-[#f8f9fa] rounded-lg border border-border max-w-md sm:max-w-lg">
                                        <div class="flex flex-col sm:flex-row md:flex-col lg:flex-row items-start gap-3">
                                            <div class="flex mx-auto w-fit h-fit min-h-18 shrink-0 justify-center items-center sm:bg-zinc-100 p-3 rounded-lg">
                                                <img src="{{ product.manufacturer_logo | url }}" alt="Meurer GmBH" class="w-24 h-auto "/>
                                            </div>
                                            <div>
                                                <div class="mb-1 flex items-center gap-2">
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        width="24"
                                                        height="24"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        class="lucide lucide-building2 w-5 h-5 text-primary mt-0.5 shrink-0">
                                                        <path d="M6 22V4a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v18Z"></path>
                                                        <path d="M6 12H4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h2"></path>
                                                        <path d="M18 9h2a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2h-2"></path>
                                                        <path d="M10 6h4"></path>
                                                        <path d="M10 10h4"></path>
                                                        <path d="M10 14h4"></path>
                                                        <path d="M10 18h4"></path>
                                                    </svg>
                                                    <h3 class="text-sm font-semibold text-foreground font-headline">{{ product.manufacturer_name }}</h3>
                                                </div>
                                                <div class="text-sm text-foreground-muted hyphens-auto break-words">
                                                    {{ product.manufacturer_information | safe }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-auto">
                                        <a href="{{"/#contact" | url}}">
                                            <button class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-full text-sm font-medium
                                                    ring-offset-background transition-all duration-300 focus-visible:outline-none focus-visible:ring-2
                                                    focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50
                                                    [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 bg-primary text-primary-foreground hover:bg-primary/90
                                                    shadow-soft hover:shadow-hover h-10 px-4 py-2 w-full md:w-auto cursor-pointer">
                                                <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="lucide lucide-mail w-4 h-4 mr-2">
                                                    <rect width="20" height="16" x="2" y="4" rx="2"></rect>
                                                    <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
                                                </svg>Angebot anfordern<svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="lucide lucide-arrow-right w-4 h-4 ml-2">
                                                    <path d="M5 12h14"></path>
                                                    <path d="m12 5 7 7-7 7"></path>
                                                </svg>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-16 border-b border-border group-last:hidden"></div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>