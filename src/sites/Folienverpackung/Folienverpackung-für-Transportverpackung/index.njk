    <div class=" items-center  mt-12  gap-8  p-4  sm:px-12 xl:px-0 text-sm md:text-base">
        <div class="max-w-7xl flex flex-row mx-auto justify-between">
        <a href="{{ backUrl | url }}" class="flex items-center font-headline md:text-lg text-foreground/75 hover:text-primary cursor-pointer">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-chevron-left-icon lucide-chevron-left size-4 md:size-5 shrink-0"><path d="m15 18-6-6 6-6"/>
            </svg>
            {{backUrl | replaceAll('/',' ')}}
        </a>
        <h1 class=" md:text-lg  font-headline text-center tracking-wide text-foreground/75">{{ title }}</h1>
        </div>
    </div>
    <div class="flex flex-col gap-8 gap-y-0 ">
